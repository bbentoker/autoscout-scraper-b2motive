# AutoScout24 Scraper Configuration Example

# Job Control - Set to true/false to enable/disable jobs
# Jobs will run once on startup if enabled, then on daily schedule
SCRAPER_ON=false
CHECKER_ON=true

# With the above settings:
# - Scraper will NOT run (neither on startup nor on schedule)
# - Checker will run once on startup, then daily at 2 AM UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=autoscout_db
DB_USER=your_username
DB_PASS=your_password

# Memory Optimization
NODE_OPTIONS="--expose-gc --max-old-space-size=512"

# Debug Mode (optional)
DEBUG=false

# Localhost Development Mode
# Set NODE_ENV=development and LOCALHOST_USERS=true to use predefined user array instead of API
NODE_ENV=production
LOCALHOST_USERS=false

# Processing Configuration (now sequential by default)
USER_PROCESSING_CONCURRENCY=1
ADVERT_PROCESSING_CONCURRENCY=1
MAKE_PROCESSING_CONCURRENCY=1

# MinIO S3-Compatible Storage Configuration
MINIO_ROOT_USER=your_minio_username
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_BUCKET=your_bucket_name

# Legacy AWS S3 Configuration (fallback support)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_s3_bucket_name