# AutoScout24 Scraper Configuration Example

# Job Control - Set to true/false to enable/disable jobs
# Jobs will run once on startup if enabled, then on daily schedule
SCRAPER_ON=false
CHECKER_ON=true

# With the above settings:
# - Scraper will NOT run (neither on startup nor on schedule)
# - Checker will run once on startup, then daily at 2 AM UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=autoscout_db
DB_USER=your_username
DB_PASS=your_password

# Memory Optimization
NODE_OPTIONS="--expose-gc --max-old-space-size=512"

# Debug Mode (optional)
DEBUG=false

# Processing Configuration (now sequential by default)
USER_PROCESSING_CONCURRENCY=1
ADVERT_PROCESSING_CONCURRENCY=1
MAKE_PROCESSING_CONCURRENCY=1
